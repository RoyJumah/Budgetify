<div class="position-relative" style="height: 100vh;">
  <div class="d-flex flex-column align-items-center justify-content-center h-100">
    <div class="text-center mb-4">
      <h2>Budgetify</h2>
    </div>
    <div class="w-100 position-absolute bottom-0">
      <%= link_to new_user_session_path do %>
        <button class="btn btn-primary btn-lg w-100" style="background-color: #3877c2; color: #fff; border-radius: 0;">Sign In</button>
      <% end %>
      <%= link_to new_user_registration_path do %>
        <button class="btn btn-light btn-lg w-100" style="color: #000; border-radius: 0;">Sign Up</button>
      <% end %>
    </div>
  </div>
</div>
